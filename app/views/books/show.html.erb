<h2>User info</h2>

<h2 class="mt-3">New book</h2>
<%= form_with model: @book do |f| %>
  <div class="form-group">
    <label for="book_title">Title</label>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <label for="book_opinion">Opinion</label>
    <%= f.text_area :body, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Create Book", class: "btn btn-success" %>
  </div>
<% end %>
</div>

<div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<%= form_with model: @book do |f| %>
  		<table class='table'>
  		  <tr>
          <td><%= image_tag @book.user.get_profile_image(100,100) %><br>
          <%= link_to user_path(current_user) do %>
          <%= @book.user.name %>
          <% end %>
          </td>
          <td><%= link_to books_path(@book.id) do %>
          <%= @book.title %>
          <% end %>
          </td>
          <td><%= @book.body %></td>
            <td><%= link_to "Edit", edit_book_path, class: "btn btn-sm btn-success" %></td>
            <td><%= link_to "Destroy", "/books/#{@book.id}", class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %></td>
        </tr>
      </table>
      <% end %>
    </div>